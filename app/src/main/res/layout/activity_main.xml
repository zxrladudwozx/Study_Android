<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/LINEARLAYOUT1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="LINEARLAYOUT 1"/>

    <Button
        android:id="@+id/LINEARLAYOUT2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="LINEARLAYOUT 2"/>

    <Button
        android:id="@+id/LINEARLAYOUT3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="LINEARLAYOUT 3"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/RELATIVELAYOUT1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RELATIVELAYOUT 1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RELATIVELAYOUT1"
            android:layout_alignStart="@id/RELATIVELAYOUT1"
            android:text="RELATIVELAYOUT 2"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RELATIVELAYOUT1"
            android:layout_alignEnd="@id/RELATIVELAYOUT1"
            android:text="RELATIVELAYOUT 3"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="RELATIVELAYOUT 4"
            />
    </RelativeLayout>
</LinearLayout>

    <!--    android:orientation="vertical" ==> 세로로  // android:orientation="horizontal" ==> 가로로 (wrap_content 등 길이 조절해줘야함)-->

